<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
       <!-- <item name="backgroundTint">@color/button_tint</item>-->
    </style>


    <style name="ActivityMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="buttonStyle">@style/ActivityMainButtonTheme</item>
    </style>

    <style name="ActivityMainButtonTheme" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>

